{% set header = {
	"description": "Доска объявлений по&nbsp;аренде недвижимости",
	"links": [
		{"link": "#", "title": "Войти"},
		{"link": "#", "title": "Скачать договор аренды"},
		{"link": "#feedback", "title": "Написать нам"}
	],
	"menu": [
		{"link": "#", "title": "Услуги и цены"},
		{"link": "#", "title": "Правила и советы"},
		{"link": "#", "title": "Собственникам"},      
		{"link": "#", "title": "Агентам"},     
		{"link": "#", "title": "Арендаторам"},     
		{"link": "#", "title": "Статьи"}
	],
	"sotial": [
		{"type": "fb", "link": "#"},
		{"type": "vk", "link": "#"},
		{"type": "flamp", "link": "#"}
	]
}%}

<div class="header">
	<div class="header__sticky">
		<div class="header__menu page__container">
			{% set menu = header.menu %}
			{% include 'menu/menu.njk' %}
			<div>
				<ul class="header__sotial">
					{% for item in header.sotial -%}
						<li class="header__sotial-item">
							<a href="{{ item.link }}" target="_blank" class="header__sotial-link">
								<svg role="img" class="header__sotial-image" width="34" height="34">
									<use xlink:href="#icon-{{ item.type }}"></use>
								</svg>
							</a>
						</li>
					{%- endfor %}
				</ul>
				<a href="#feedback" class="btn btn_border header__feedback">
					<span class="btn__icon">
						<svg width="18" height="18">
							<use xlink:href="#icon-edit"></use>
						</svg>
					</span>
					<span class="btn__text">Напишите нам</span>
				</a>
			</div>
		</div>
		<div class="header__container page__container clearfix">
			<div class="header__right">
				<a href="#add" class="btn btn_border btn_border_purpur header__add">
					<span class="btn__icon">
						<svg width="15" height="15">
							<use xlink:href="#icon-plus"></use>
						</svg>
					</span>
					<span class="btn__text">Добавить объявление</span>
				</a>
			</div>
			<div class="header__left">
				<div class="header__toggle">
					<a href="#" class="header__toggle-ico"><span></span></a>
				</div>
				<a href="/build/" class="header__logo">
					<svg class="logo" width="150" height="50">
						<use xlink:href="#icon-logo"></use>
					</svg>
				</a>
			</div>
			<div class="header__content">
				<div class="header__description">{{ header.description }}</div>
				<div class="header__links">
					{% set menu = header.links %}
					{% include 'menu/menu.njk' %}
				</div>
			</div>
		</div>
	</div>
</div>